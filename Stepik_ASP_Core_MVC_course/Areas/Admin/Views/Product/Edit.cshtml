@model EditProductViewModel

<form method="post" enctype="multipart/form-data">
    <div>
        <h3>Изменение товара</h3>
    </div>

    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

    <input type="hidden" name="Id" value="@Model?.Id" />

    <div class="row">
        <div class="col-6">
            <label asp-for="Name"></label><br />
            <input class="form-control" asp-for="Name" value="@Model?.Name"/>
            <span asp-validation-for="Name" />
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <label asp-for="Description"></label><br />
            <input class="form-control" asp-for="Description" value="@Model?.Description"/>
            <span asp-validation-for="Description" />
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <label asp-for="Cost">Цена</label><br />        
            <input type="number" class="form-control" asp-for="Cost" value="@Model?.Cost"/>
            <span asp-validation-for="Cost" />
        </div>
    </div>
    
    <div class="row">
        <div class="col-6">
            <input type="hidden" asp-for="@Model.ImagesPaths" value="@Model.ImagesPaths" />
            <label>Изображения</label><br />

            @foreach(var imagePath in Model.ImagesPaths)
            {
                <div style="padding:4px">
                    <img src="@imagePath" width="150" height="150"/>
                </div>
            }            
        </div>
    </div>

    <div class="form-group">
        <label>Загрузить новые изображения</label>
        <input type"file" name="UploadedFiles" multiple accept="image/*" class="form-control" />
    </div>

    <div>
        <button class="btn btn-success" type="submit" asp-area="Admin" asp-controller="Product" asp-action="Edit">Сохранить</button>
    </div>
</form>

