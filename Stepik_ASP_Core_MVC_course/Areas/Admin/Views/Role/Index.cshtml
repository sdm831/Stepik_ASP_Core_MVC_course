@model List<RoleViewModel>

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <div class="row">
            <h3>Список Ролей</h3>
        </div>
        <a asp-area="Admin"
           asp-controller="Role"
           asp-action="Add">Добавить роль</a>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Название</th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@Model[i].Name</td>
                        <td><a 
                               asp-area="Admin"
                               asp-controller="Role"
                               asp-action="Remove"
                               asp-route-roleName="@Model[i].Name">Удалить</a>
                        </td>                        
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



