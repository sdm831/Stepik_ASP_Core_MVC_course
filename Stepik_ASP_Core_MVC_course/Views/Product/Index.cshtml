@model ProductViewModel
@{
    ViewData["Title"] = "Product";
}

<div class="row">
    <div class="col-3 card shadow">
        <img class="card-img-top" src="@Model.ImagePath" alt="Изображение товара" />
    </div>

    <div class="col-6">        
        <h5>@Model.Name</h5>
        <h5>@Model.Cost</h5>
        <h5>@Model.Description</h5>
        <a class="btn btn-primary" href="/home/index" role="button">Продолжить покупки</a>
        <a class="btn btn-success" href="/cart/add?productId=@Model.Id" role="button">Добавить в корзину</a>
    </div>
</div>


