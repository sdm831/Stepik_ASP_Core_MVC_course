@model Product
@{
    ViewData["Title"] = "Product";
}

<div class="row">
    <div class="col-3 card shadow">
        <img class="card-img-top" src="@Model.ImagePath" alt="Изображение товара" />
    </div>

    <div>
        <h5>Id = @Model.ProductId</h5>
        <h5>Name = @Model.Name</h5>
        <h5>Cost = @Model.Cost</h5>
        <h5>@Model.Description</h5>
        <a class="btn btn-dark" href="/home/index" role="button">Продолжить покупки</a>
        <a class="btn btn-dark" href="#" role="button">Добавить в корзину</a>
    </div>
</div>


