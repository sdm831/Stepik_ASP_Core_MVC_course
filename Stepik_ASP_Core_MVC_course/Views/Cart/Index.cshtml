@model Cart
@{
    ViewData["Title"] = "Корзина";
}

@if(Model == null)
{
    <h3>Корзина пуста</h3>
}
else
{
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена, руб</th>
                    <th>Количество</th>
                    <th>Стоимость, руб</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Cost</td>
                        <td>@item.Amount</td>
                        <td>@item.Cost</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-right">
            <h4>Итого: @Model.Cost</h4>
        </div>
        <div class="text-center">
            <a class="btn btn-success" href="/home/index" role="button">Продолжить покупки</a>
            <a class="btn btn-danger" href="#" role="button">Оформить заказ</a>
        </div>
    </div>
</div>
}

