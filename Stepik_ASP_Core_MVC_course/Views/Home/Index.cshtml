@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-3 card shadow">
            <img class="card-img-top" src="@item.ImagePath" alt="Изображение товара" />
            <div class="card-body">
                <a style="color:black" href="/product/index/@item.ProductId">
                    <h5>@item.Name</h5>
                </a>
                <h5>@item.Cost руб</h5>
                <a class="btn btn-primary" href="/cart/add?productId=@item.ProductId" role="button">Добавить в корзину</a>
            </div>        
        </div>        
    }
</div>



