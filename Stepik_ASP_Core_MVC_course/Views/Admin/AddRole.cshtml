@model Role

    <form method="post">
        <h3>Создание новой роли</h3>

        <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

        <div class="row">
            <div class="col-3">
                <label asp-for="Name">Название роли</label>
            </div>
            <div class="col-3">
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" />
            </div>
        </div>
                
        <div>
            <button class="btn btn-success" type="submit" asp-controller="Admin" asp-action="AddRole">Создать</button>
        </div>
    </form>
