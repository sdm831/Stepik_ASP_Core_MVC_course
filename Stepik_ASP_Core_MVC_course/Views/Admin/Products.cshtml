@model List<Product>
@{
    ViewData["Title"] = "Admin";
}

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <div class="row">
            <h3>Список продуктов</h3>
        </div>

        <a href="/admin/AddProduct">Добавить новый продукт</a>

        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Название</th>
                        <th>Цена</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Cost</td>
                        <td><a href="/admin/editProduct?productId=@Model[i].Id">Редактировать</a></td>
                        <td><a href="/admin/removeProduct?productId=@Model[i].Id">Удалить</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

